<div class="container padded">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <h2>Add a new metaclass</h2>

      <%= simple_form_for @metaclass do |f| %>

      <div class="form-inputs">
        <%= f.input :metaclassname, required: true, label: "Metaclass name", placeholder: "Session-Level-Timeslot", autofocus: true %>
        <div class="fields-inline">
          <%= f.association :session, collection: Session.order('sessionstartdate DESC'),label_method: :sessionname, include_blank: false, wrapper_html: { style: "display: inline" } %>
          <%= link_to "Add", new_session_path, class: "align-left" %>
          <%= f.association :instructor, collection: Instructor.order('instructor ASC'), label_method: :instructor, include_blank: false, wrapper_html: { style: "display: inline" } %>
          <%= link_to "Add", new_instructor_path, class: "align-right" %>
        </div>
        <div class="fields-inline">
          <%= f.input :metaclassdaytime, required: true, label: "Timeslot", wrapper_html: { style: "display: inline" } %>
          <%= f.input :metaclasslocation, required: true, label: "Location" %>
        </div>
        <%= f.association :students, collection: Student.order('lastname ASC'), label_method: :student_name, include_blank: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Add metaclass" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
