<div id="classes">
  <% @metaclass.lessons.sort.reverse.each do |lesson| %>
  <div class="row">
    <div class="col-md-2">
      <%= link_to lesson.classdate.strftime('%B %e, %Y'), metaclass_lesson_path(@metaclass, lesson) %>
    </div>
    <div class="col-md-2">
      <%= lesson.classtime %>
    </div>
    <div class="col-md-2">
      <%= lesson.location %>
    </div>
    <div class="col-md-2">
      <%= lesson.instructor.instructor %>
    </div>
    <div class="col-md-2">
    <%= link_to metaclass_lesson_path(@metaclass, lesson), method: :delete, data: { confirm: "Are you sure?" } do %>
      <span class="fa fa-trash-o"> Delete</span>
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <%= link_to new_metaclass_lesson_path(@metaclass) do %>
      <p class="fa fa-plus"> Add a new class</p>
      <% end %>
    </div>
  </div>
</div>
