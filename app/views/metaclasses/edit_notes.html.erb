<div class="container padded">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <h2>Edit notes</h2>

      <%= simple_form_for @metaclass, url: update_notes_metaclass_path(@metaclass) do |f| %>

      <div class="form-inputs">
        <%= f.input :metaclassnote, as: :text, input_html: {rows: 18}, label: false, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update notes" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
