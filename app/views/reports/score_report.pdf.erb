<!doctype html>
<html>
<head>
  <meta charset='utf-8' />
  <%= wicked_pdf_stylesheet_link_tag "templates.scss", media: "all" %>
</head>

<body>
  <div class="container padded">
    <div class="navbar-wagon-brand">
      <%= wicked_pdf_image_tag 'logo.jpg' %>
    </div>
    <h2><%= @student.firstname %> <%= @student.lastname %></h2>
    <h4>Current level: <%= @student.currentlevel %></h4>

    <table>
      <tr>
        <th>Session</th>
        <th>Speaking (/20)</th>
        <th>Listening (/25)</th>
        <th>Grammar (/20)</th>
        <th>Vocabulary (/20)</th>
        <p>Reading (/15)</p>
      </tr>

      <% @student.michiganscores.sort_by(&:assignment).reverse.each do |score| %>
      <tr>
        <td><%= score.assignment.session.sessionname %></td>
        <td><%= score.speakingscore %></td>
        <td><%= score.recalibrate_listening_score %></td>
        <td><%= score.recalibrate_grammar_score %></td>
        <td><%= score.recalibrate_vocab_score %></td>
        <td><%= score.recalibrate_read_score %></td>
      </tr>
      <% end %>
    </table>
  </div>
</body>
</html>
