<!doctype html>
<html>
<head>
  <meta charset='utf-8' />
  <%= wicked_pdf_stylesheet_link_tag "application" -%>
</head>

<body>
  <div class="container">
    <div class="navbar-wagon-brand">
      <%= wicked_pdf_image_tag 'logo.jpg' %>
    </div>
    <div class="header" style="text-align: center">
      <p><%= @metaclass.metaclassdaytime %></p>
      <p><%= @month %>/<%= @year %></p>
      <p>English training</p>
    </div>

    <div class="row">
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray">
        Name
      </div>
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray">
        Company
      </div>
      <div class="col-xs-6" style="font-size: 12px">
        <% @lessons.each do |lesson| %>
        <div class="col-xs-3" style="border: 1px solid gray">
          <%= lesson.classdate.strftime('%m/%d/%y') %>
        </div>
        <% end %>
      </div>
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray">
        Hours
      </div>
    </div>

    <% @metaclass.students.each do |student| %>
    <div class="row">
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px">
        <%= student.student_name %>
      </div>
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px">
        <%= student.company %>
      </div>
      <div class="col-xs-6">
        <% @lessons.each do |lesson| %>
        <div class="col-xs-3" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px; color: white">
          Sign here
        </div>
        <% end %>
      </div>
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px; color: white">
        Hours here
      </div>
    </div>
    <% end %>
    <div class="row">
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px">
        <%= @metaclass.instructor.instructor %>
      </div>
      <div class="col-xs-2" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px">
        Softeam trainer
      </div>
      <div class="col-xs-6">
        <% @lessons.each do |lesson| %>
       <div class="col-xs-3" style="font-size: 12px; border: 1px solid gray; padding: 30px 0px; color: white">
          Sign here
        </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>
