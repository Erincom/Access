<div class="container padded">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="input-group margin-bottom-sm">
          <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
          <%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Email address", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
          <%= f.input :password, autocomplete: "off", label: false, placeholder: "New password", required: false %>
        </div>
        <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirm your new password" %>
        <%= f.input :current_password, label: false, placeholder: "Enter your current password to confirm your changes", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
      <% end %>

      <div class="padded">
          <%= link_to destroy_user_session_path, class: "btn btn-default", method: :delete do %>
          <i class="fa fa-sign-out" aria-hidden="true"></i> Sign out
          <% end %>

        <%= link_to registration_path(resource_name), class: "btn btn-danger align-right", data: { confirm: "Are you sure?" }, method: :delete do %>
        <i class="fa fa-trash-o fa-lg"></i> Delete my account
        <% end %>
      </div>

    </div>
  </div>
</div>
