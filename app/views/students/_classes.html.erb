<div id="classes">
  <div class="row">
    <div class="col-md-3">
      <p>Metaclass name</p>
    </div>
    <div class="col-md-3">
      <p>Instructor</p>
    </div>
    <div class="col-md-2">
      <p>Attendance</p>
    </div>
    <div class="col-md-2">
      <p>Class date</p>
    </div>
    <div class="col-md-2">
      <p>Class timeslot</p>
    </div>
  </div>
  <% @student.lessons.sort.reverse.each do |lesson| %>
  <div class="row">
    <div class="col-md-3">
      <%= lesson.metaclass.metaclassname %>
    </div>
    <div class="col-md-3">
      <%= lesson.instructor.instructor %>
    </div>
    <div class="col-md-2">
      <% if lesson.student_lessons.where(student: @student).first.attendance == true %>
      <p>Present</p>
      <% else %>
      <p>X</p>
      <% end %>
    </div>
    <div class="col-md-2">
      <%= link_to lesson.classdate.strftime('%B %e, %Y'), metaclass_lesson_path(lesson.metaclass, lesson) %>
    </div>
    <div class="col-md-2">
      <%= lesson.classtime %>
    </div>
  </div>
  <% end %>
</div>
