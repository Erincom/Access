<div class="container padded">
  <div class="edit-links">
    <%= link_to edit_assignment_path(@assignment) do %>
    <span class="fa fa-pencil"> Edit</span>
    <% end %>
  </div>
  <%= link_to assignment_path(@assignment), method: :delete, data: { confirm: "Are you sure?" } do %>
  <span class="fa fa-trash-o"> Delete</span>
  <% end %>
  <h1><%= @assignment.session.sessionname %> <%= @assignment.assignmentdescription %></h1>
  <%= @assignment.assignmentdate.strftime('%B %e, %Y') %>

  <div class="row">
    <div class="col-md-4">
      <p>Student</p>
    </div>
    <div class="col-md-1">
      <p>Speaking</p>
    </div>
    <div class="col-md-1">
      <p>Listening</p>
    </div>
    <div class="col-md-1">
      <p>Grammar</p>
    </div>
    <div class="col-md-1">
      <p>Vocabulary</p>
    </div>
    <div class="col-md-1">
      <p>Reading</p>
    </div>
    <div class="col-md-1">
      <p>Total</p>
    </div>
  </div>

  <% @assignment.michiganscores.each do |score| %>
  <div class="row">
    <div class="col-md-4">
      <%= link_to student_path(score.student) do %>
      <%= score.student.firstname %> <%= score.student.lastname %>
      <% end %>
    </div>
    <div class="col-md-1">
      <%= score.speakingscore %>
    </div>
    <div class="col-md-1">
      <%= score.listeningscore %>
    </div>
    <div class="col-md-1">
      <%= score.grammarscore %>
    </div>
    <div class="col-md-1">
      <%= score.vocabscore %>
    </div>
    <div class="col-md-1">
      <%= score.readscore %>
    </div>
    <div class="col-md-1">
      <%= total_score(score.speakingscore, score.listeningscore, score.grammarscore, score.vocabscore, score.readscore) %>
    </div>

  </div>
  <% end %>
