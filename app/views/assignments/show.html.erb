<div class="container padded">
  <div class="edit-links">
    <%= link_to edit_assignment_path(@assignment) do %>
    <span class="fa fa-pencil"> Edit</span>
    <% end %>
  </div>
  <%= link_to assignment_path(@assignment), method: :delete, data: { confirm: "Are you sure?" } do %>
  <span class="fa fa-trash-o"> Delete</span>
  <% end %>
  <h1><%= @assignment.session.sessionname %> <%= @assignment.assignmentdescription %></h1>
  <%= @assignment.assignmentdate.strftime('%B %e, %Y') %>

  <div class="row">
    <div class="col-md-4">
      <p>Student</p>
    </div>
    <div class="col-md-1">
      <p>Speaking</p>
    </div>
    <div class="col-md-1">
      <p>Listening</p>
    </div>
    <div class="col-md-1">
      <p>Grammar</p>
    </div>
    <div class="col-md-1">
      <p>Vocabulary</p>
    </div>
    <div class="col-md-1">
      <p>Reading</p>
    </div>
    <div class="col-md-1">
      <p>Total</p>
    </div>
  </div>

  <% remove_empty_scores(@assignment.michiganscores).each do |score| %>
  <div class="row">
    <div class="col-md-4">
        <%= link_to student_path(score.student) do %>
        <%= score.student.firstname %> <%= score.student.lastname %>
      <% end %>
    </div>
    <div class="col-md-1">
      <%= score.speakingscore %>
    </div>
    <div class="col-md-1">
      <%= score.recalibrate_listening_score %>
    </div>
    <div class="col-md-1">
      <%= score.recalibrate_grammar_score %>
    </div>
    <div class="col-md-1">
      <%= score.recalibrate_vocab_score %>
    </div>
    <div class="col-md-1">
      <%= score.recalibrate_read_score %>
    </div>
    <div class="col-md-1">
      <%= total_score(score.speakingscore, score.recalibrate_listening_score, score.recalibrate_grammar_score, score.recalibrate_vocab_score, score.recalibrate_read_score) %>
    </div>

  </div>
  <% end %>
